{
  "hosting": {
    "public": "dist/e-commerce",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "rules": {
      ".read": true,
      ".write": true
    }
  }
}
